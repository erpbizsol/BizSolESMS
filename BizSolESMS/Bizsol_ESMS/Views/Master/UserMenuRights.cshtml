<style>
    #tbldetail .table th, .table td {
        padding: 0.2rem;
        width: 400px;
    }

    table.table tbody tr td {
        text-align: left !important;
        padding: 1px;
        padding-left: 5px !important;
    }

    table.table thead tr th {
        /*background: linear-gradient(to right, #285e9f, #174174) !important;*/
        color: #fff;
        font-size: 12px;
        padding: 5px;
    }

    table.table tbody tr td {
        color: black;
        font-size: 12px;
        padding: 5px;
        font-weight: bold;
        /*background: linear-gradient(to top, #e2e6eb, #dadee3) !important;*/
    }

    .fixed-column {
        position: sticky;
        left: 0;
        z-index: 1;
        background-color: #ffffff;
    }

    .fixed-header {
        position: sticky;
        top: 0;
        z-index: 3;
    }

    .table-container {
        overflow-x: auto;
        max-width: 100%;
        margin: 20px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        font-size: 12px;
    }

        .styled-table th,
        .styled-table td {
            border: 1px solid #ccc;
            padding: 5px;
            text-align: center;
        }

        .styled-table th {
            background-color: #0b6fa4;
            color: white;
        }

        .styled-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .styled-table tr:nth-child(odd) {
            background-color: #ffffff;
        }

    .toggle-btn {
        cursor: pointer;
        background: #ddd;
        padding: 5px;
        border: none;
        border-radius: 3px;
        font-weight: bold;
    }

        .toggle-btn.expanded {
            background: #ccc;
        }

    .sub-row {
        display: none;
        background-color: #f9f9f9;
        font-size: 11px;
        text-align: left;
    }

</style>
<style>
    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 200px;
        max-height: 200px;
        overflow-y: auto;
        border: 1px solid #ccc;
        z-index: 1;
    }

        .dropdown label {
            display: block;
            padding: 8px 12px;
            cursor: pointer;
        }

        .dropdown label input[type="checkbox"] {
            display: inline-block;
            margin-right: 5px;
        }
        #txtUserName{
