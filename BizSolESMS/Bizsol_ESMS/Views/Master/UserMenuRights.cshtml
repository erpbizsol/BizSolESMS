<style>
    .table th{
        padding: 0.2rem;
        width: 400px !important;
        text-align:center!important;
    }
    
    table.table thead tr th {
        /*background: linear-gradient(to right, #285e9f, #174174) !important;*/
        color: #fff;
        font-size: 12px;
        padding: 5px;
    }

    table.table tbody tr td {
        color: black;
        font-size: 12px;
        padding: 5px;
        font-weight: bold;
        /*background: linear-gradient(to top, #e2e6eb, #dadee3) !important;*/
    }

    .fixed-column {
        position: sticky;
        left: 0;
        z-index: 1;
        background-color: #ffffff;
    }

    .fixed-header {
        position: sticky;
        top: 0;
        z-index: 3;
    }

    .table-container {
        overflow-x: auto;
        max-width: 100%;
        min-height:500px;
        margin: 20px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .styled-table {
        width: 50%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        font-size: 12px;
    }

    .styled-table th,
    .styled-table td {
        border: 1px solid #ccc;
        padding: 5px;
        text-align: center;
    }

    .styled-table th {
        background-color: #0b6fa4;
        color: white;
    }

    .styled-table tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .styled-table tr:nth-child(odd) {
        background-color: #ffffff;
    }

    .toggle-btn {
        cursor: pointer;
        background: #ddd;
        padding: 5px;
        border: none;
        border-radius: 3px;
        font-weight: bold;
    }

        .toggle-btn.expanded {
            background: #ccc;
        }

    .sub-row {
        display: none;
        background-color: #f9f9f9;
        font-size: 11px;
        text-align: left;
    }

    .table-wrapper {
        min-height:500px !important;
    }

    .table > tbody > tr:nth-of-type(odd) > * {
        --bs-table-color-type: var(--bs-table-striped-color);
        --bs-table-bg-type: rgb(243 240 240 / 5%);
    }

    input, optgroup, select, textarea {
        margin: 4px;
    }

    .fixed-column {
        position: sticky;
        left: 0;
        /* //z-index: 1; */
        background-color: #ffffff;
    }

    .fixed-header {
        position: sticky;
        top: 0;
        z-index:100!important;
    }

    .tooltip1:hover::after {
        content: attr(data-tooltip);
        position: absolute;
        background-color: #333;
        color: #fff;
        padding: 5px;
        border-radius: 4px;
        top: 100%; /* Position the tooltip above the element */
        left: 50%; /* Center it horizontally */
        transform: translateX(-50%); /* Adjust to align the center */
        white-space: nowrap;
        z-index: 1000;
        font-size: 12px;
        opacity: 1 !important;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.3); /* Optional: Add a shadow */
    }
</style>
