@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/assets/css/filter.css" rel="stylesheet" />
<script src="~/assets/script/UserMaster.js"></script>
<style>
    /* table filter header text in one line  */
    th, .filter-table-heading {
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .filter-table-heading {
        overflow: hidden;
    }

    .table th {
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .table-filter-arrow {
        position: relative;
        display: inline-block;
    }
    /* End table filter header text in one line  */

    .form-group {
        margin-bottom: 8px;
    }

    #imgUserForShow {
        /* margin-left: 29px;
                margin-top: 20px; */
        border: 1px solid black;
        height: 200px;
        width: 180px;
        border-radius: 2px;
    }

    #imgSelfie {
        height: 196px;
        width: 176px;
        padding: 2px;
    }

    img {
        border-radius: 0px;
    }

.tabs {
        width: 100%;
        max-width: 2000px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }


    .tabSec {
        color: white;
        width: 117px;
        height: 36px;
        float: inline-end;
        font-size: 12px;
        text-align: center;
        border-top-right-radius: 40px;
        border-bottom-left-radius: 40px;
        line-height: 3;
        margin-top: -8px;
        background: #1d4b7d;
    }

    .tab-content {
        display: none;
        padding: 16px;
        border: 1px solid lightgray;
        border-radius: 5px;
    }

        .tab-content.active {
            display: block;
        }

    .tab[disabled] {
        cursor: not-allowed;
        opacity: 0.9;
    }

    .datepicker td, .datepicker th {
        border-radius: 20px !important;
    }

    .datepicker table tr td, .datepicker table tr td {
        padding: 8px 9px !important;
        height: 16px !important;
    }
    .datepicker table tfoot {
        display: none;
    }
    .page-content {
        display: block;
    }

    .textCreatepage .tabs .fix-header {
        position: sticky;
        top: 0;
        background-color: #dddde4;
        z-index: 1000;
        padding: 8px 0 8px 9px;
        transition: background 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.9);
        height: 36px;
    }


    .shadow-sm {
        border-top-right-radius: 5px;
        border-top-left-radius: 5px;
        background-color: #e9e9ef;
        margin-top: 15px;
        border-top: 1px solid #c9cae7;
    }

    .btn-icon {
        font-size: 14px;
        border-radius: 50%;
        background: #1d4b7d;
        color: #fff;
        padding: 6px;
    }

    .btn-icon {
        font-size: 14px;
        border-radius: 20px;
        background: #1d4b7d;
        color: #fff;
        padding: 6px;
    }

    .btn-danger {
        background-color: #ab1624;
    }

    .highlight {
        background-color: #f5c0bfc4;
    }

    .container-fluid {
        padding-right: 0;
        padding-left: 0;
        /*  overflow: hidden;
                        height: auto; */
    }

    .container {
        overflow: auto;
        height: 81vh;
        /* overflow: hidden; */
    }
