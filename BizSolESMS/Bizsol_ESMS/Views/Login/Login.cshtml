@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/assets/script/login.js"></script>
 
    <title>Login ESMS</title>
    <style>
        .login-containers {
            padding: 20px 30px;
            border-radius: 10px;
            box-shadow: 0 0 90px rgb(191 201 191);
            max-width: 370px;
            margin: 0 auto;
            margin-top: 5rem;
        }

    #btnValidateCompany, #btnProceed {
            width: 100%;
        }
        

    .Esms-logo {
        width: 100px;
        height: 100px;
        border-radius: 50%;
       /*  border-style: dotted;
        border-color: #275481; */
        position: relative;
        bottom: 4rem;
        border: 1px solid #a8acb0;
    }

    .pp-esms {
        height: 50px;
    }

    </style>

    <div class="login-containers card">
        <div class="text-center pp-esms">
            <img src="~/assets/images/esms-logo.png" class="Esms-logo" />
        </div>
        <form>
            <div class="mb-3">
                <label for="txtCompanyCode" class="form-label">Company Code</label>
                <input id="txtCompanyCode" name="CompanyCode" class="form-control" placeholder="Enter Company Code" type="text" required autocomplete="off">
            </div>
            <input type="button" class="btn btn-primary" id="btnValidateCompany" value="Proceed" />
            <div id="userCredentials" style="display: none;">
            <div class="mb-3"id="txtU">
                <label for="txtUserID" class="form-label">UserID</label>
                <input id="txtUserID" name="UserID" class="form-control" placeholder="Enter User ID" type="text" required autocomplete="off">
            </div>
            <div class="mb-3" id="txtP">
                <label for="txtPassword" class="form-label">Password</label>
                <input id="txtPassword" name="Password" class="form-control" placeholder="Enter Password" autocomplete="off" type="password" required>
            </div>
            <input type="button" class="btn btn-primary" id="btnProceed" value="Proceed" />
            </div>
        </form>
    </div>





