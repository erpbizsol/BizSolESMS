@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<link href="~/assets/css/filter.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<script src="~/assets/script/BoxValidation.js"></script>
<style>
    .tabs {
        width: 100%;
        max-width: 2000px;
        /* background: #fff;  */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }
    .tab-header {
        display: flex;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.9);
        height: 36px;
    }
    .tab-header div {
        flex: 0.1;
        text-align: center;
        padding: 7px 16px;
        cursor: pointer;
        transition: background 0.3s ease;
        border-bottom-right-radius: 40px;
        border-top-left-radius: 40px;
        font-weight:bold;
    }

    .tab-header div:hover {
        background: #586e87;
        color: white;
    }

    .tab-header .active {
        background: #1d4b7d;
    }

    .tab-content {
        display: none;
        padding: 16px;
        border: 1px solid lightgray;
        border-radius: 5px;
    }

    .tab-content.active {
        display: block;
    }

    .tab[disabled] {
        cursor: not-allowed;
        opacity: 0.9;
    }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        display: none;
    }
    .toast-container {
        position: fixed;
        top: 45%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #d35950;
        color: white;
        padding: 35px 55px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        display: none;
        z-index: 10000;
        font-size: 18px;
        text-align: center;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
    }

    .toggle-handle {
        position: relative;
        margin: 0 auto;
        padding-top: 0;
        padding-bottom: 0;
        height: 100%;
        width: 0;
        border-width: 0 1px;
        background-color: #fff !important;
    }

    .toggle.btn {
        min-width: 59px;
        min-height: 28px !important;
    }

    .fixed-height {
        min-height: 10px !important;
    }

    .toggle-off {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 44%;
        right: 0;
        margin: 0;
        border: 0;
        border-radius: 0;
    }

    .col-md-2{
        width:120px !important;
    }

    table {
        width: 40% !important;
    }

        table > thead, th {
            width: 59px !important;
        }
</style>
<div class="card shadow-sm" style="background-color:#e9e9ef">
    <div class="tabs">
        <div class="tab-header">
            <div id="tab1" class="tab active" style="color:white">VALIDATION</div>
        </div>
        <div class="row p-2">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4 col-sm-6">
                        <label for="txtBoxNo" class="col-form-label-sm fw-bold">Box No</label><span class="text-danger">*</span>
                        <input type="text" id="txtBoxNo" class="box_border form-control form-control-sm" autocomplete="off" placeholder="Box No.." onfocus="this.select()">
                    </div>
                    <div class="col-md-2 col-sm-6 fixed-height" style="height:10px !important;">
                        <label for="txtScanToggle" class="col-form-label-sm fw-bold">Scan/Manual</label><span class="text-danger">*</span><br />
                        <input type="checkbox" data-size="small" id="txtScanToggle" class="box_border form-control form-control" checked data-toggle="toggle" data-on="Scan" data-off="Manual" data-onstyle="secondary" data-offstyle="info">
                    </div>
                    <div class="col-md-3 col-sm-6" id="divScanProduct" >
                        <label for="txtScanProduct" class="col-form-label-sm fw-bold">Scan Product</label><span class="text-danger">*</span>
                        <input type="text" id="txtScanProduct" class="box_border form-control form-control-sm" autocomplete="off" placeholder="Scan Product.." onfocus="this.select()">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3" sstyle="display:none" id="UnloadingTable">
    <div class="card-body mt-2">
        <div class="table-wrapper fixed-height-table">
            <table id="table" class="fixed-width-table table">
                <thead id="table-header">
                </thead>
                <tbody id="table-body">
                </tbody>
            </table>
        </div>
        <div class="paginator" id="paginator-table">
        </div>
    </div>
</div>
<div id="overlay" class="overlay"></div>
<div id="toast" class="toast-container"></div>
<script src="~/assets/js/filter.js"></script>