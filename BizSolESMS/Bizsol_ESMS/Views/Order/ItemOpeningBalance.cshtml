<style>
    .table th{
        width:100px;
    }

    #table th:last-child{
        width: 20px;
    }

    .table-wrapper {
        height: 350px !important;
    }
    .tabs {
        width: 100%;
        max-width: 2000px;
        /* background: #fff;  */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }

    .tab-header {
        display: flex;
        /* background: #e3e7ed; */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.9);
        height:36px;
    }

    .tab-header div {
        flex: 0.1;
        text-align: center;
        padding: 7px 16px;
        cursor: pointer;
        transition: background 0.3s ease;
        border-bottom-right-radius: 40px;
        border-top-left-radius: 40px;
        font-weight: bold;
    }

    .tab-header div:hover {
        background: #586e87;
        color: white;
    }

    .tab-header .active {
        background: #1d4b7d;
    }

    .tab-content {
        display: none;
        padding: 16px;
        border: 1px solid lightgray;
        border-radius: 5px;
    }

    .tab-content.active {
        display: block;
    }

    .tab[disabled] {
        cursor: not-allowed;
        opacity: 0.9;
    }
    .datepicker td, .datepicker th {
        border-radius: 20px !important;
    }

    .datepicker table tr td, .datepicker table tr td {
        padding: 8px 9px !important;
        height: 16px !important;
    }

    .datepicker table tfoot {
        display: none;
    }

    .highlight {
        background-color: #90e4ba;
    }
</style>

