<style>
    .tabs {
        width: 100%;
        max-width: 2000px;
        /* background: #fff;  */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }

    .tab-header {
        display: flex;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.9);
        height: 36px;
    }

        .tab-header div {
            flex: 0.1;
            text-align: center;
            padding: 7px 16px;
            cursor: pointer;
            transition: background 0.3s ease;
            border-bottom-right-radius: 40px;
            border-top-left-radius: 40px;
            font-weight: bold;
        }

            .tab-header div:hover {
                background: #586e87;
                color: white;
            }

        .tab-header .active {
            background: #1d4b7d;
        }

    .tab-content {
        display: none;
        padding: 16px;
        border: 1px solid lightgray;
        border-radius: 5px;
    }

        .tab-content.active {
            display: block;
        }

    .tab[disabled] {
        cursor: not-allowed;
        opacity: 0.9;
    }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        display: none;
    }

    .toast-container {
        position: fixed;
        top: 45%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #d35950;
        color: white;
        padding: 35px 55px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        display: none;
        z-index: 10000;
        font-size: 18px;
        text-align: center;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
    }

    .toggle-handle {
        position: relative;
        margin: 0 auto;
        padding-top: 0;
        padding-bottom: 0;
        height: 100%;
        width: 0;
        border-width: 0 1px;
        background-color: #fff !important;
    }

    .toggle.btn {
        min-width: 59px;
        min-height: 28px !important;
    }

    .fixed-height {
        min-height: 10px !important;
    }

    .toggle-off {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 44%;
        right: 0;
        margin: 0;
        border: 0;
        border-radius: 0;
