                                    <div class="row" id="tblDispatchData" style="display:none;">
                                        <div class="col-md-12">
                                            <div class="table-wrapper" style="overflow: auto;">
                                                <table id="tblDispatchTable" class="table">
                                                    <thead id="DispatchTable-Header">
                                                        
                                                    </thead>
                                                    <tbody id="DispatchTable-Body"></tbody>
                                                    <tfoot>
                                                       
                                                    </tfoot>
                                                </table>
                                            </div>
                                            <div class="paginator" id="paginator-tblDispatchTable">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <datalist id="txtOrderNo"></datalist>
                <datalist id="txtClientNameList"></datalist>
                <datalist id="txtItemBarCode"></datalist>
                <datalist id="txtItemCode"></datalist>
                <datalist id="txtItemName"></datalist>
                <datalist id="txtItemAddress"></datalist>
            </div>
        </div>
    </div>
    <div id="overlay" class="overlay"></div>
    <div id="toast" class="toast-container"></div>
</div>
