    <div id="txtCreatepage" style="display:none;">
        <div class="card shadow-sm" style="background-color:#e9e9ef">
            <div class="tabs">
                <div class="row p-1">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3 col-sm-6">
                                <label for="txtOrderNo" class="col-form-label-sm fw-bold">Order No<span class="text-danger">*</span></label>
                                <input type="text" id="txtOrderNo" list="txtOrderNoList" class="box_border form-control form-control-sm" autocomplete="off" placeholder="Order No.." disabled>
                                <datalist id="txtOrderNoList"></datalist>
                                <input type="hidden" id="hfCode" class="box_border form-control form-control-sm" autocomplete="off" placeholder="Order No.." disabled  value="0">
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <label for="txtChallanNo" class="col-form-label-sm fw-bold">Challan No<span class="text-danger">*</span></label>
                                <input type="text" id="txtChallanNo" class="box_border form-control form-control-sm" autocomplete="off" placeholder="Challan No.." disabled>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <label for="txtChallanDate" class="col-form-label-sm fw-bold">Challan Date<span class="text-danger">*</span></label>
                                <input type="text" id="txtChallanDate" class="box_border form-control form-control-sm" autocomplete="off" placeholder="Challan Date.." disabled>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <label for="txtClientName" class="col-form-label-sm fw-bold">Client Name</label><span class="text-danger">*</span>
                                <input type="text" id="txtClientDispatchName" autocomplete="off" class="form-control form-control-sm box_border" placeholder="Client Name.." disabled>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <label for="txtScanProduct" class="col-form-label-sm fw-bold">Scan Product<span class="text-danger">*</span></label>
                                <input type="text" id="txtScanProduct" class="box_border form-control form-control-sm" autocomplete="off" maxlength="200" placeholder="Scan Product.." onfocus="this.select()">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-end btnAuto p-1" id="btnShowAll" style="display:none"><button class="btn btn-primary btn-height" title="Show all item" id="ShowAll">SHOW ALL</button></div>
                <div class="row" id="divOrderBooking mb-2">
