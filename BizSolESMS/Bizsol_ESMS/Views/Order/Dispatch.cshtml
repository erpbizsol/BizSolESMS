        /* box-shadow: 0 1px 1px rgb(76 76 76 / 90%); */
    }

    /* Active tab styles */
    .tab-section {
        display: flex;
        padding: 5px 7px;
        margin: 0;
        border: none;
    }

    .nav-item-btn {
        background: #fffbff;
        font-size: 12px;
        font-weight: 600;
        text-align: center;
        text-transform: capitalize;
        padding: 10px 10px;
        margin: 3px 10px 3px 0;
        border: none;
        border-radius: 8px 8px 0 0;
        border-bottom: 2px solid #275481;
        overflow: hidden;
        position: relative;
        z-index: 1;
    }

        .nav-item-btn.active {
            background-color: #1c4e80;
            color: white;
            border: none;
        }

        .nav-item-btn:hover {
            background-color: #e6e9ff;
            color: #081a2c;
        }

    /* End Active tab styles */
</style>
