@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<link href="~/assets/css/filter.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script src="~/assets/script/DispatchReport.js"></script>
<script src="~/assets/js/xlsx.full.min.js"></script>
<style>
    .tabs {
        width: 100%;
        max-width: 2000px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        overflow: hidden;
        padding: 0.7rem;
    }


    .tabSec {
        color: white;
        width: 117px;
        height: 36px;
        float: inline-end;
        font-size: 12px;
        text-align: center;
        border-top-right-radius: 40px;
        border-bottom-left-radius: 40px;
        line-height: 3;
        margin-top: -8px;
        background: #1d4b7d;
    }
    .tab-content {
        display: none;
        padding: 16px;
        border: 1px solid lightgray;
        border-radius: 5px;
    }

        .tab-content.active {
            display: block;
        }

    .tab[disabled] {
        cursor: not-allowed;
        opacity: 0.9;
    }

    .datepicker td, .datepicker th {
        border-radius: 20px !important;
    }

    .datepicker table tr td, .datepicker table tr td {
        padding: 8px 9px !important;
        height: 16px !important;
    }
    .datepicker table tfoot {
        display: none;
    }
    .page-content {
        display: block;
    }
    .textCreatepage .tabs .fix-header {
        position: sticky;
        top: 0;
        background-color: #dddde4;
        z-index: 1000;
        padding: 8px 0 8px 9px;
        transition: background 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.9);
        height: 36px;
    }
    .shadow-sm {
        border-top-right-radius: 5px;
        border-top-left-radius: 5px;
        background-color: #e9e9ef;
        margin-top: 15px;
        border-top: 1px solid #c9cae7;
    }

    .btn-icon {
        font-size: 14px;
        border-radius: 50%;
        background: #1d4b7d;
        color: #fff;
        padding: 6px;
    }

    .btn-icon {
        font-size: 14px;
        border-radius: 20px;
        background: #1d4b7d;
        color: #fff;
        padding: 6px;
    }

    .btn-danger {
        background-color: #ab1624;
    }

    .highlight {
        background-color: #f5c0bfc4;
    }

    .container-fluid {
        padding-right: 0;
        padding-left: 0;
    }

    .container {
        overflow: auto;
        height: 81vh;
    }

    .breadcrumbs1 {
        position: sticky;
        top: 0;
        background-color: #eff7ff;
        z-index: 1000;
        padding: 8px 0px 0px 9px;
        box-shadow: 0 2px 4px rgb(96 95 95 / 90%);
        box-shadow: 0 1px 1px rgb(76 76 76 / 90%);
    }

    .page-content {
        padding: 3px 0;
    }

    .active {
        background-color: #275481;
        color: #fff;
    }
</style>
<section class="breadcrumbs1" id="txtheaderdiv" style="display:none">
    <div class="container-fluid" style="">
        <div class="fix-header">
            <div class="row">
                <div class="col-md-6 col-6">
                    <div class="icon-tab">
                        <a class="btn-icon me-1" onclick="Save()" id="txtsave" title="Save"><i class='bx bx-save'></i></a>
                        <a class="btn-icon btn-danger" id="btnBack" onclick="BackMaster()" title="Back"><i class='bx bx-arrow-back'></i></a>
                    </div>
                </div>
                <div class="col-md-6 col-6">
                    <div id="tab1" class="tabSec tab active">NEW</div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="breadcrumbs1" id="txtheaderdiv2" style="display:none">
    <div class="container-fluid" style="">
        <div class="fix-header">
            <div class="row">
                <div class="col-md-6 col-6">
                    <div class="icon-tab">
                        <a class="btn-icon me-1" id="btnImport" onclick="SaveImportFile()" title="Save"><i class='bx bx-save'></i></a>
                        <a class="btn-icon btn-danger" id="btnBack" onclick="BackImport()" title="Back"><i class='bx bx-arrow-back'></i></a>
                    </div>
                </div>
                <div class="col-md-6 col-6">
                    <div id="tab1" class="tabSec tab active">NEW</div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="mt-3" id="txtListPage" style="display:block;">
        <div class="row">
            <div class="col-sm-12 text-end">
                <button type="button" class="btn btn-info btn-height" onclick="ImportExcel()" id="ImportExcel">IMPORT</button>
                <button type="button" class="btn btn-primary btn-height" onclick="DataExport()" id="exportExcel">DOWNLOAD</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <label for="txtDate" class="col-form-label-sm fw-bold">Date</label><span class="text-danger">*</span>
                <input type="text" id="txtDate" class="box_border form-control form-control-sm" autocomplete="off" maxlength="200" placeholder="Date">
            </div>
        </div>
        <div class="card-body mt-2" id="txtTATTable">
            <div class="table-wrapper fixed-height-table">
                <table id="table" class="fixed-width-table table">
                    <thead id="table-header">
                    </thead>
                    <tbody id="table-body">
                    </tbody>
                </table>
            </div>
            <div class="paginator" id="paginator-table">
            </div>
        </div>
    </div>
    <div id="txtImportPage" style="display:none;">
        <div class="card shadow-sm">
            <div class="tabs">
                <div class="row p-2">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-3 col-sm-6">
                                <label for="txtMonth" class="col-form-label-sm fw-bold">Month</label><span class="text-danger">*</span>
                                <input type="text" id="txtTATDate" class="box_border form-control form-control-sm" autocomplete="off" maxlength="200" placeholder="Date">
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <label for="txtExcelFile" class="col-form-label-sm fw-bold">Choose File</label><span class="text-danger">*</span>
                                <input type="file" id="txtExcelFile" class="box_border form-control form-control-sm" autocomplete="off" accept=".xlsx, .xls, .csv">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body mt-2" id="ImportTable">
            <div class="table-wrapper fixed-height-table">
                <table id="table1" class="fixed-width-table table">
                    <thead id="table-header1">
                    </thead>
                    <tbody id="table-body1">
                    </tbody>
                </table>
            </div>
            <div class="paginator" id="paginator-table1">
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/filter.js"></script>


