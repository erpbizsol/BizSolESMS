@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<link href="~/assets/css/filter.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script src="~/assets/script/stockledger.js"></script>
<style>
    .datepicker td, .datepicker th {
        border-radius: 20px !important;
    }

    .datepicker table tr td, .datepicker table tr td {
        padding: 8px 9px !important;
        height: 16px !important;
    }

    .active {
        background-color: #275481;
        color: #fff;
    }

    .datepicker table tfoot {
        display: none;
    }


</style>

<div class="container">
    <div id="txtListpage">
        <div class="row mt-3">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-3 col-sm-6">
                            <label class="col-form-label-sm fw-bold">Group <span class="text-danger">*</span></label>
                            <select id="ddlGroup" class="form-control form-control-sm box_border">
                                <option value="0">All</option>
                            </select>
                        </div>

                        <div class="col-md-3 col-sm-6">
                            <label class="col-form-label-sm fw-bold">Sub Group <span class="text-danger">*</span></label>
                            <select id="ddlSubGroup" class="form-control form-control-sm box_border">
                                <option value="0">All</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <label class="col-form-label-sm fw-bold">Item Name<span class="text-danger">*</span></label>
                            <select id="ddlItemName" class="form-control form-control-sm box_border">
                            </select>
                        </div>
                        <div class="col-md-3  col-sm-6">
                            <label for="txtFromDate" class="col-form-label-sm fw-bold">
                                From Date <span class="text-danger">*</span>
                            </label>
                            <input type="text" id="txtFromDate" name="txtFromDate" autocomplete="off" class="form-control form-control-sm box_border" placeholder="From Date.." maxlength="50">
                        </div>
                        <div class="col-md-3  col-sm-6">
                            <label for="txtToDate" class="col-form-label-sm fw-bold">
                                To Date <span class="text-danger">*</span>
                            </label>
                            <input type="text" id="txtToDate" name="txtToDate" autocomplete="off" class="form-control form-control-sm box_border" placeholder="To Date.." maxlength="50">
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <label class="col-form-label-sm fw-bold">Report Type<span class="text-danger">*</span></label>
                            <select id="ddlReportType" class="form-control form-control-sm box_border">
                            </select>
                        </div>
                        <div class="col-md-3  col-sm-6 " style="margin-top: 33px !important;">
                            <button class="btn btn-primary btn-height" title="Show" id="txtShow">Show</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body mt-2" id="tblStockLedger">
            <div class="table-wrapper fixed-height-table">
                <table id="table" class="fixed-width-table table">
                    <thead id="table-header">
                    </thead>
                    <tbody id="table-body">
                    </tbody>
                </table>
            </div>
            <div class="paginator" id="paginator-table">
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/filter.js"></script>


